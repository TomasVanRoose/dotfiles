# the t key isn't used and it's easier to press than /, so lets use it
def_key "t"
    find
def_key "t"
    find_item_forward

def_key "+"
    show_clock
def_key "="
    volume_up

def_key "j"
    scroll_down
def_key "k"
    scroll_up

def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down

def_key "h"
    previous_column
def_key "l"
    next_column

def_key "."
    show_lyrics

# not used but bound
def_key "J"
    move_sort_order_down
def_key "K"
    move_sort_order_up

def_key "d"
    delete_playlist_items

def_key "n"
    move_selected_items_down

def_key "N"
    move_selected_items_up
